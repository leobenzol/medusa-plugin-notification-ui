{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Notification Templates Translations Schema",
    "description": "Schema for notification templates translation files",
    "type": "object",
    "required": [
        "fields",
        "notificationTemplates",
        "eventNotifiers"
    ],
    "properties": {
        "$schema": {
            "type": "string",
            "description": "JSON Schema reference for validation and IDE support"
        },
        "fields": {
            "type": "object",
            "description": "Field labels used throughout forms",
            "required": [
                "template",
                "layout",
                "template_code"
            ],
            "properties": {
                "template": {
                    "type": "string",
                    "description": "Label for template field"
                },
                "layout": {
                    "type": "string",
                    "description": "Label for layout field"
                },
                "template_code": {
                    "type": "string",
                    "description": "Label for template code field"
                }
            },
            "additionalProperties": false
        },
        "notificationTemplates": {
            "type": "object",
            "description": "Translations related to notification templates",
            "required": [
                "title",
                "domain",
                "list",
                "create",
                "edit",
                "deleteWarning",
                "no_layout",
                "template_editor",
                "defaultTemplates",
                "defaultLayouts",
                "toast"
            ],
            "properties": {
                "title": {
                    "type": "string",
                    "description": "Main page title for notification templates"
                },
                "domain": {
                    "type": "object",
                    "description": "Domain-specific terminology",
                    "required": [
                        "templates",
                        "layouts"
                    ],
                    "properties": {
                        "templates": {
                            "type": "string",
                            "description": "Label for templates tab/section"
                        },
                        "layouts": {
                            "type": "string",
                            "description": "Label for layouts tab/section"
                        }
                    },
                    "additionalProperties": false
                },
                "list": {
                    "type": "object",
                    "description": "List view related translations",
                    "required": [
                        "empty",
                        "filtered"
                    ],
                    "properties": {
                        "empty": {
                            "type": "object",
                            "description": "Empty state when no templates exist",
                            "required": [
                                "heading",
                                "description"
                            ],
                            "properties": {
                                "heading": {
                                    "type": "string",
                                    "description": "Heading text for empty state"
                                },
                                "description": {
                                    "type": "string",
                                    "description": "Description text for empty state"
                                }
                            },
                            "additionalProperties": false
                        },
                        "filtered": {
                            "type": "object",
                            "description": "Filtered state when no results match filters",
                            "required": [
                                "heading",
                                "description"
                            ],
                            "properties": {
                                "heading": {
                                    "type": "string",
                                    "description": "Heading text for filtered empty state"
                                },
                                "description": {
                                    "type": "string",
                                    "description": "Description text for filtered empty state"
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false
                },
                "create": {
                    "type": "object",
                    "description": "Create flow related translations",
                    "required": [
                        "title",
                        "hint",
                        "tabs",
                        "isLayoutTemplate",
                        "isLayoutTemplateDescription"
                    ],
                    "properties": {
                        "title": {
                            "type": "string",
                            "description": "Title for create notification template form"
                        },
                        "hint": {
                            "type": "string",
                            "description": "Hint text for create notification template form"
                        },
                        "tabs": {
                            "type": "object",
                            "description": "Tab labels in create modal",
                            "required": [
                                "details",
                                "template"
                            ],
                            "properties": {
                                "details": {
                                    "type": "string",
                                    "description": "Details tab label"
                                },
                                "template": {
                                    "type": "string",
                                    "description": "Template tab label"
                                }
                            },
                            "additionalProperties": false
                        },
                        "isLayoutTemplate": {
                            "type": "string",
                            "description": "Label for layout template switch in create flow"
                        },
                        "isLayoutTemplateDescription": {
                            "type": "string",
                            "description": "Description for layout template switch in create flow"
                        }
                    },
                    "additionalProperties": false
                },
                "edit": {
                    "type": "object",
                    "description": "Edit flow related translations",
                    "required": [
                        "title",
                        "isLayoutTemplate",
                        "isLayoutTemplateDescription"
                    ],
                    "properties": {
                        "title": {
                            "type": "string",
                            "description": "Title for edit notification template form"
                        },
                        "isLayoutTemplate": {
                            "type": "string",
                            "description": "Label for layout template switch"
                        },
                        "isLayoutTemplateDescription": {
                            "type": "string",
                            "description": "Description for layout template switch"
                        }
                    },
                    "additionalProperties": false
                },
                "deleteWarning": {
                    "type": "string",
                    "description": "Warning message when deleting a template. Supports {{name}} interpolation for template name"
                },
                "no_layout": {
                    "type": "string",
                    "description": "Label for no layout option"
                },
                "template_editor": {
                    "type": "object",
                    "description": "Template editor section translations",
                    "required": [
                        "title",
                        "tabs",
                        "loading_preview",
                        "updating_preview",
                        "error_rendering_template",
                        "render_with_layout"
                    ],
                    "properties": {
                        "title": {
                            "type": "string",
                            "description": "Title for template editor section"
                        },
                        "tabs": {
                            "type": "object",
                            "description": "Tab labels in preview section",
                            "required": [
                                "preview",
                                "html",
                                "text"
                            ],
                            "properties": {
                                "preview": {
                                    "type": "string",
                                    "description": "Preview tab label"
                                },
                                "html": {
                                    "type": "string",
                                    "description": "HTML tab label"
                                },
                                "text": {
                                    "type": "string",
                                    "description": "Text tab label"
                                },
                                "jsx": {
                                    "type": "string",
                                    "description": "JSX tab label"
                                },
                                "jsx_description": {
                                    "type": "string",
                                    "description": "JSX tab description"
                                },
                                "additional": {
                                    "type": "string",
                                    "description": "Additional code tab label"
                                },
                                "additional_description": {
                                    "type": "string",
                                    "description": "Additional code tab description"
                                },
                                "preview_props": {
                                    "type": "string",
                                    "description": "Preview props tab label"
                                },
                                "preview_props_description": {
                                    "type": "string",
                                    "description": "Preview props tab description"
                                },
                                "i18n": {
                                    "type": "string",
                                    "description": "i18n keys tab label"
                                },
                                "i18n_description": {
                                    "type": "string",
                                    "description": "i18n keys tab description"
                                }
                            },
                            "additionalProperties": false
                        },
                        "loading_preview": {
                            "type": "string",
                            "description": "Loading message for preview"
                        },
                        "updating_preview": {
                            "type": "string",
                            "description": "Updating message for preview"
                        },
                        "error_rendering_template": {
                            "type": "string",
                            "description": "Error message when template rendering fails"
                        },
                        "render_with_layout": {
                            "type": "string",
                            "description": "Tooltip for render with layout button"
                        }
                    },
                    "additionalProperties": false
                },
                "defaultTemplates": {
                    "type": "object",
                    "description": "Default template options with titles and descriptions",
                    "patternProperties": {
                        "^[a-z]+$": {
                            "type": "object",
                            "required": [
                                "title",
                                "description"
                            ],
                            "properties": {
                                "title": {
                                    "type": "string",
                                    "description": "Template option title"
                                },
                                "description": {
                                    "type": "string",
                                    "description": "Template option description"
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false
                },
                "defaultLayouts": {
                    "type": "object",
                    "description": "Default layout options with titles and descriptions",
                    "patternProperties": {
                        "^[a-z]+$": {
                            "type": "object",
                            "required": [
                                "title",
                                "description"
                            ],
                            "properties": {
                                "title": {
                                    "type": "string",
                                    "description": "Layout option title"
                                },
                                "description": {
                                    "type": "string",
                                    "description": "Layout option description"
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false
                },
                "toast": {
                    "type": "object",
                    "description": "Toast notification messages",
                    "required": [
                        "create",
                        "update",
                        "delete"
                    ],
                    "properties": {
                        "create": {
                            "type": "string",
                            "description": "Success message after creating a template"
                        },
                        "update": {
                            "type": "string",
                            "description": "Success message after updating a template"
                        },
                        "delete": {
                            "type": "string",
                            "description": "Success message after deleting a template"
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        },
        "eventNotifiers": {
            "type": "object",
            "description": "Translations related to event notifiers",
            "required": [
                "title",
                "deleteWarning",
                "table",
                "fields",
                "form",
                "recipientTypes",
                "create",
                "edit",
                "detail",
                "emptyState",
                "toast"
            ],
            "properties": {
                "title": {
                    "type": "string",
                    "description": "Main page title for event notifiers"
                },
                "deleteWarning": {
                    "type": "string",
                    "description": "Warning message when deleting an event notifier"
                },
                "table": {
                    "type": "object",
                    "description": "Table related translations",
                    "required": [
                        "eventName",
                        "template",
                        "channel",
                        "recipientType",
                        "recipient",
                        "actions",
                        "loading"
                    ],
                    "properties": {
                        "eventName": {
                            "type": "string",
                            "description": "Table header for event name column"
                        },
                        "template": {
                            "type": "string",
                            "description": "Table header for template column"
                        },
                        "channel": {
                            "type": "string",
                            "description": "Table header for channel column"
                        },
                        "recipientType": {
                            "type": "string",
                            "description": "Table header for recipient type column"
                        },
                        "recipient": {
                            "type": "string",
                            "description": "Table header for recipient column"
                        },
                        "actions": {
                            "type": "string",
                            "description": "Table header for actions column"
                        },
                        "loading": {
                            "type": "string",
                            "description": "Loading state message"
                        }
                    },
                    "additionalProperties": false
                },
                "fields": {
                    "type": "object",
                    "description": "Field labels",
                    "required": [
                        "eventName",
                        "template",
                        "channel",
                        "recipientType",
                        "recipient"
                    ],
                    "properties": {
                        "eventName": {
                            "type": "string",
                            "description": "Label for event name field"
                        },
                        "template": {
                            "type": "string",
                            "description": "Label for template field"
                        },
                        "channel": {
                            "type": "string",
                            "description": "Label for channel field"
                        },
                        "recipientType": {
                            "type": "string",
                            "description": "Label for recipient type field"
                        },
                        "recipient": {
                            "type": "string",
                            "description": "Label for recipient field"
                        }
                    },
                    "additionalProperties": false
                },
                "form": {
                    "type": "object",
                    "description": "Form related translations",
                    "required": [
                        "eventNamePlaceholder",
                        "selectTemplate",
                        "selectChannel",
                        "selectRecipientType",
                        "recipientPlaceholder",
                        "recipientHint"
                    ],
                    "properties": {
                        "eventNamePlaceholder": {
                            "type": "string",
                            "description": "Placeholder for event name input field"
                        },
                        "selectTemplate": {
                            "type": "string",
                            "description": "Placeholder for template selection"
                        },
                        "selectChannel": {
                            "type": "string",
                            "description": "Placeholder for channel selection"
                        },
                        "selectRecipientType": {
                            "type": "string",
                            "description": "Placeholder for recipient type selection"
                        },
                        "recipientPlaceholder": {
                            "type": "string",
                            "description": "Placeholder for recipient input field"
                        },
                        "recipientHint": {
                            "type": "string",
                            "description": "Hint text for recipient input field"
                        }
                    },
                    "additionalProperties": false
                },
                "recipientTypes": {
                    "type": "object",
                    "description": "Recipient type labels",
                    "required": [
                        "static",
                        "entityKey"
                    ],
                    "properties": {
                        "static": {
                            "type": "string",
                            "description": "Label for static recipient type"
                        },
                        "entityKey": {
                            "type": "string",
                            "description": "Label for entity key recipient type"
                        }
                    },
                    "additionalProperties": false
                },
                "create": {
                    "type": "object",
                    "description": "Create flow related translations",
                    "required": [
                        "title",
                        "subtitle"
                    ],
                    "properties": {
                        "title": {
                            "type": "string",
                            "description": "Title for create event notifier form"
                        },
                        "subtitle": {
                            "type": "string",
                            "description": "Subtitle for create event notifier form"
                        }
                    },
                    "additionalProperties": false
                },
                "edit": {
                    "type": "object",
                    "description": "Edit flow related translations",
                    "required": [
                        "title"
                    ],
                    "properties": {
                        "title": {
                            "type": "string",
                            "description": "Title for edit event notifier form"
                        }
                    },
                    "additionalProperties": false
                },
                "detail": {
                    "type": "object",
                    "description": "Detail page related translations",
                    "required": [
                        "subtitle"
                    ],
                    "properties": {
                        "subtitle": {
                            "type": "string",
                            "description": "Subtitle for event notifier detail page"
                        }
                    },
                    "additionalProperties": false
                },
                "emptyState": {
                    "type": "object",
                    "description": "Empty state when no event notifiers exist",
                    "required": [
                        "heading",
                        "description"
                    ],
                    "properties": {
                        "heading": {
                            "type": "string",
                            "description": "Heading text for empty state"
                        },
                        "description": {
                            "type": "string",
                            "description": "Description text for empty state"
                        }
                    },
                    "additionalProperties": false
                },
                "toast": {
                    "type": "object",
                    "description": "Toast notification messages",
                    "required": [
                        "created",
                        "updated",
                        "deleted",
                        "createError",
                        "updateError",
                        "deleteError",
                        "allFieldsRequired"
                    ],
                    "properties": {
                        "created": {
                            "type": "string",
                            "description": "Success message after creating an event notifier"
                        },
                        "updated": {
                            "type": "string",
                            "description": "Success message after updating an event notifier"
                        },
                        "deleted": {
                            "type": "string",
                            "description": "Success message after deleting an event notifier"
                        },
                        "createError": {
                            "type": "string",
                            "description": "Error message when creating fails"
                        },
                        "updateError": {
                            "type": "string",
                            "description": "Error message when updating fails"
                        },
                        "deleteError": {
                            "type": "string",
                            "description": "Error message when deleting fails"
                        },
                        "allFieldsRequired": {
                            "type": "string",
                            "description": "Validation error message when required fields are missing"
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}
